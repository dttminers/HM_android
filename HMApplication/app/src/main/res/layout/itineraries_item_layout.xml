<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rrItinerary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dp">

    <ImageView
        android:id="@+id/ivItemIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/str_image" />

    <TextView
        android:id="@+id/tvItemData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/ivItemIcon"
        android:layout_toRightOf="@id/ivItemIcon"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="end|center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvItemTimeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:gravity="start|center"
        android:lines="1"
        android:maxLength="20"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <View
        android:id="@+id/v12"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tvItemTimeData"
        android:layout_toLeftOf="@id/ivItemIcon"
        android:layout_toRightOf="@id/tvItemTimeData"
        android:layout_toStartOf="@id/ivItemIcon"
        android:background="@drawable/line_grey" />

</RelativeLayout>