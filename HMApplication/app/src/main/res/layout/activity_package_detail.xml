            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPkgDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/str_image"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rlPkgDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPdDays"
                    style="@style/Black.12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/txtPdAmt"
                    style="@style/Black.12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txtPdDays"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/txtPdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@id/txtPdDays"
                    android:layout_toStartOf="@id/txtPdDays"
                    android:textColor="@color/light_orange2"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/rbPd1"
                    style="?android:ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPdName"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="5dp"
                    android:rating="4.0"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="1.0" />

                <TextView
                    android:id="@+id/txtPDLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rbPd1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/place_black_15dp"
                    android:drawableStart="@drawable/place_black_15dp"
                    android:maxLines="1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtPdLevel"
                    style="@style/Black.12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPDLocation"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/txtPdActivityId"
                    style="@style/Black.12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPdLevel"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txtPdContact"
                    style="@style/Black.12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPdActivityId"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp" />

