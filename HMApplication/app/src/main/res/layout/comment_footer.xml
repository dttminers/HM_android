<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCfMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="4">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCf"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:contentDescription="@string/str_image"
        android:src="@color/light" />

    <EditText
        android:id="@+id/edtCfPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="3.8"
        android:background="@drawable/rounded_corner_edittext"
        android:gravity="top|left"
        android:hint="@string/str_write_a_comment"
        android:lines="1"
        android:maxLines="5"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnCfSend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:background="@drawable/ic_send2"
        android:padding="3dp" />

</LinearLayout>


