<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llCustomDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCustomHeader"
        style="@style/Black.15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:text="@string/str_change_to_private_account" />

    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light" />

    <TextView
        android:id="@+id/tvCustomMsg"
        style="@style/Black.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="@string/str_when_your_account_is_private_only_people_you_approve_can_see_your_photos_videos_and_stories_on_hm_your_existing_followers_won_t_be_affected" />


    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Black.12"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:text="@string/str_cancel" />

        <view
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/light" />


        <Button
            android:id="@+id/btnOk"
            style="@style/Black.12"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:background="@android:color/white"
            android:text="@string/str_ok" />
    </LinearLayout>

</LinearLayout>