<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rr_Nf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="1dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/Nf_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/str_image"
        android:src="@color/light" />

    <TextView
        android:id="@+id/txtNf_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/Nf_image"
        android:layout_toRightOf="@+id/Nf_image"
        android:lines="1"
        android:maxLines="3"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/str_hello_android"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtNf_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNf_label"
        android:layout_alignStart="@+id/txtNf_label"
        android:layout_below="@+id/txtNf_label"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:text="@string/str_2_hr_ago"
        android:textSize="12sp" />

</RelativeLayout>