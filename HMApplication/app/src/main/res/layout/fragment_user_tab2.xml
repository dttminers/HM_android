<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tbUsersTab2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingTop="2dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:isScrollContainer="false"
        app:tabBackground="?android:attr/selectableItemBackground"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/grey5"
        app:tabMode="fixed">

        <android.support.design.widget.TabItem
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:icon="@drawable/profile_grid" />

        <android.support.design.widget.TabItem
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:icon="@drawable/profile_list" />

        <android.support.design.widget.TabItem
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:icon="@drawable/profile_tag" />

        <android.support.design.widget.TabItem
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:icon="@drawable/profile_photo_tab_icon" />

    </android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_bottom" />

    <FrameLayout
        android:id="@+id/flUsersTab2Container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/white" />

</LinearLayout>

