<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llNo_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNo_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="@string/str_total_number_of_rooms"
        android:textColor="@color/light_pink1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llNo_room1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSingle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/str__1_single_sharing"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgSingle_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/str_image"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            android:id="@+id/txtSingle_count"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/str_1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgSingle_sub"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/str_image"
            android:src="@drawable/ic_remove_black_24dp" />

    </LinearLayout>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shadow_top" />

    <LinearLayout
        android:id="@+id/llNo_room2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDouble"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/str_2_double_sharing"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgDouble_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/str_image"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            android:id="@+id/txtDouble_count"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/str_1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDouble_sub"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/str_image"
            android:src="@drawable/ic_remove_black_24dp" />

    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shadow_top" />

    <LinearLayout
        android:id="@+id/llNo_room3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTriple"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/str_3_tripple_sharing"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgTriple_add"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/str_image"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            android:id="@+id/txtTriple_count"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/str_1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgTriple_sub"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/str_image"
            android:src="@drawable/ic_remove_black_24dp" />

    </LinearLayout>
    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shadow_top" />

    <Button
        android:id="@+id/btn_ok2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/str_ok"
        android:textStyle="bold"/>

</LinearLayout>