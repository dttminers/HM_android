<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rr_header_file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:layout_margin="1dp">

    <ImageView
        android:id="@+id/circle_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/str_image"
        android:src="@color/light" />

    <Button
        android:id="@+id/btnFrIgnore"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/border_black"
        android:text="Ignore"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnFrConfirm"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/btnFrIgnore"
        android:layout_toStartOf="@id/btnFrIgnore"
        android:background="@drawable/border_black"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/circle_img"
        android:layout_toLeftOf="@id/btnFrConfirm"
        android:layout_toRightOf="@+id/circle_img"
        android:layout_toStartOf="@id/btnFrConfirm"
        android:lines="1"
        android:maxLines="3"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="@string/str_hello_android"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_time_ago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_label"
        android:layout_margin="2dp"
        android:layout_toEndOf="@+id/circle_img"
        android:layout_toLeftOf="@id/btnFrConfirm"
        android:layout_toRightOf="@+id/circle_img"
        android:layout_toStartOf="@id/btnFrConfirm"
        android:maxLines="1"
        android:text="@string/str_2_hr_ago"
        android:textSize="12sp" />

</RelativeLayout>