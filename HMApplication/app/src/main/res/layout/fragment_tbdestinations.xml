<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsvDestination"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hm.application.fragments.TBDestinationsFragment">

    <LinearLayout
        android:id="@+id/llDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLblFavDest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey4"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/str_find_your_favourite_destination"
            style="@style/Black.15" />

        <Spinner
            android:id="@+id/sprDestinations"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:entries="@array/destinations"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/txtLblFeaturedDest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/grey4"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/str_featured_destinations"
            style="@style/Black.15" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRvTbDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:nestedScrollingEnabled="true" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>