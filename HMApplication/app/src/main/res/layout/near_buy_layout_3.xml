<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rr_near_by"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgNbPlacePic1"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:contentDescription="@string/str_image"
        android:src="@color/light" />

    <TextView
        android:id="@+id/txtName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb2"
        android:text="Lodi - The Garden Restaurants"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rb2"
        style="?android:ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtName"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:progressTint="@color/light_orange2"
        android:rating="4.0"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:stepSize="1.0" />

    <TextView
        android:id="@+id/txtDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName1"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/imgNbPlacePic1"
        android:layout_toStartOf="@id/imgNbPlacePic1"
        android:maxLines="3"
        android:text="@string/str_lorem"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal" />


</RelativeLayout>