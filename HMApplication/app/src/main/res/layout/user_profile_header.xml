<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llUserProHead"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/llUserProHead1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgUph"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:contentDescription="@string/str_image"
            android:scaleType="fitXY"
            android:src="@drawable/bg_splash" />

        <TextView
            android:id="@+id/txtUphName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/str_hello_android"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtUphFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/str_from_place_data"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <RatingBar
            android:id="@+id/rbUphRatingData"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:theme="@style/AppTheme.Rating" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUserProHead2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUphNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:padding="3dp"
            android:drawableStart="@drawable/ic_notification"
            android:drawableLeft="@drawable/ic_notification"
            android:text="@string/str_notifications"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtUphWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:padding="3dp"
            android:drawableStart="@drawable/ic_mywallet"
            android:drawableLeft="@drawable/ic_mywallet"
            android:text="@string/str_0"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtUphBoard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:padding="3dp"
            android:drawableStart="@drawable/ic_myreward"
            android:drawableLeft="@drawable/ic_myreward"
            android:text="@string/str_leader_board"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtUphTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:padding="3dp"
            android:drawableStart="@drawable/menu_cloud"
            android:drawableLeft="@drawable/menu_cloud"
            android:text="@string/str_26_c"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtUphBucket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mybucketlist"
            android:drawableLeft="@drawable/ic_mybucketlist"
            android:gravity="start|center"
            android:padding="3dp"
            android:text="@string/str_my_bucket_list"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>